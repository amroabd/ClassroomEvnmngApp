<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:background="@drawable/bg_content_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
     <!--   <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="32dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textSize="20sp"
            android:text="@string/label_setting"
            />
        <Button
            android:id="@+id/addClassroomBtn"
            android:layout_width="match_parent"
            android:text="اضافة القاعات"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:text="تغيير كلمة السر"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/languageBtn"
            android:layout_width="match_parent"
            android:text="اللغة "
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:text="تسجيل خروج "
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>