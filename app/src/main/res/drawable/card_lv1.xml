<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list android:autoMirrored="true" android:opacity="translucent">

            <item
                tools:targetApi="m" tools:ignore="UnusedAttribute">
                <shape>
                    <solid android:color="@color/main_color_200" />
                    <corners android:radius="@dimen/_10sdp" />
                    <stroke android:color="@color/main_color_200"
                        android:width="@dimen/_1sdp"/>
                    <padding android:top="@dimen/_1sdp"
                        android:left="@dimen/_1sdp"
                        android:bottom="@dimen/_1sdp"
                        android:right="@dimen/_1sdp"/>
                    <size android:height="@dimen/_100sdp" android:width="@dimen/_200sdp"/>
                    <padding android:left="1.0dip" android:right="1.0dip" />
                </shape>
            </item>

            <item android:top="@dimen/_1sdp"
                tools:targetApi="m" tools:ignore="UnusedAttribute">
                <shape>
                    <solid android:color="@color/orange_s_700" />
                    <corners android:radius="@dimen/_15sdp" />
                    <stroke android:color="@color/orange_s_200"
                        android:width="0.277777dp"/>
                </shape>
            </item>
            <item  android:right="@dimen/_10sdp"
                android:left="@dimen/_10sdp" android:top="@dimen/_5sdp"
                android:start="@dimen/_5sdp"
                tools:targetApi="m" tools:ignore="UnusedAttribute">
                <shape android:shape="rectangle">
                    <gradient  android:endColor="@color/orange_s_500"
                        android:startColor="@color/orange_s_200"
                        android:type="linear"
                        android:useLevel="false" android:angle="270"
                        android:centerColor="@color/orange_s_200" />
                    <stroke android:color="@color/orange_s_200"
                        android:width="0.277777dp"/>
                    <corners
                        android:topRightRadius="@dimen/_150sdp"
                        android:bottomRightRadius="@dimen/_150sdp"
                        android:bottomLeftRadius="@dimen/_150sdp"
                        android:topLeftRadius="@dimen/_150sdp"/>
                </shape>
            </item>


            <item android:top="@dimen/_25sdp" android:bottom="@dimen/_40sdp"
                android:left="@dimen/_30sdp" android:right="@dimen/_40sdp"
                tools:targetApi="m" tools:ignore="UnusedAttribute">
                <shape android:shape="rectangle">
                    <gradient  android:endColor="@color/main_color_100"
                        android:startColor="@color/main_color_100"
                        android:type="linear"
                        android:useLevel="true" android:angle="180"/>
                    <stroke android:color="@color/main_color_100"
                        android:width="0.277777dp"/>
                    <corners
                        android:topRightRadius="@dimen/_150sdp"
                        android:bottomRightRadius="@dimen/_100sdp"
                        android:bottomLeftRadius="@dimen/_150sdp"
                        android:topLeftRadius="@dimen/_150sdp"/>
                    <padding android:left="10.0dip" android:right="10.0dip"
                        android:top="5.0dip" android:bottom="5.0dip" />
                </shape>
            </item>


        </layer-list>
    </item>

</selector>