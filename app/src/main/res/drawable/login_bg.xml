<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="@dimen/_1sdp"
                        android:color="@color/main_color_50"/>
                    <corners android:radius="@dimen/_5sdp"/>
                    <solid android:color="@color/main_color_500" />
                </shape>
            </item>

            <item android:width="@dimen/_300sdp"
                 android:top="@dimen/_150sdp" tools:targetApi="m" tools:ignore="UnusedAttribute">
                <rotate android:fromDegrees="30.0" android:pivotX="0.5"
                    android:pivotY="200.0" android:toDegrees="0.0" android:visible="true">
                    <shape>
                        <solid android:color="@color/main_color_50" />
                        <stroke android:color="@color/main_color_500"
                            android:width="@dimen/_5sdp"/>
                        <corners  android:topRightRadius="@dimen/_45sdp"
                            android:topLeftRadius="@dimen/_80sdp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</selector>