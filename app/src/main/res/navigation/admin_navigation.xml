<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_admin_home"
    android:id="@+id/admin_navigation">

    <fragment android:name="com.is.classroomevnmngapp.ui.admin.AdminHomeFragment"
        tools:layout="@layout/fragment_admin_home"
        android:id="@+id/nav_admin_home"/>

    <fragment  tools:layout="@layout/fragment_admin_check_device"
        android:name="com.is.classroomevnmngapp.ui.admin.check_device.CheckDeviceAdminFragment"
        android:id="@+id/navigation_admin_check_device"/>

    <fragment  tools:layout="@layout/fragment_list_reservation"
        android:name="com.is.classroomevnmngapp.ui.reservations.ReservationListFragment"
        android:id="@+id/navigation_admin_add_schedule">
        <action
            android:id="@+id/action_reserve_listFragment_to_reserveFragment"
            app:destination="@id/navigation_user_reservation"
            app:enterAnim="@anim/animate_slide_up_enter"
            app:exitAnim="@anim/animate_slide_up_exit"
            app:popEnterAnim="@anim/animate_slide_up_enter"
            app:popExitAnim="@anim/animate_slide_up_exit"
            app:launchSingleTop="true"
            app:popUpTo="@+id/navigation_user_reservation_list"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/navigation_user_reservation"
        android:name="com.is.classroomevnmngapp.ui.reservations.ReservationAddFragment"
        tools:layout="@layout/fragment_add_reservation" />

    <fragment  tools:layout="@layout/fragment_admin_config_sensors"
        android:name="com.is.classroomevnmngapp.ui.admin.config_sensor.ConfigSensorsAdminFragment"
        android:id="@+id/navigation_admin_config_sensors"/>

    <fragment  tools:layout="@layout/fragment_user_setting"
        android:name="com.is.classroomevnmngapp.ui.setting.SettingFragment"
        android:id="@+id/navigation_admin_setting">
        <action
            android:id="@+id/action_settingFragment_to_classroomListFragment"
            app:destination="@id/navigation_user_classroom"
            app:enterAnim="@anim/animate_split_enter"
            app:exitAnim="@anim/animate_split_exit"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/animate_split_enter"
            app:popExitAnim="@anim/animate_split_exit"
            app:popUpTo="@+id/fragment_user_setting"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment  tools:layout="@layout/fragment_change_password"
        android:name="com.is.classroomevnmngapp.ui.setting.change_pass.ChangPasswordFragment"
        android:id="@+id/navigation_change_pass"/>

    <fragment  tools:layout="@layout/fragment_list_classroom"
        android:name="com.is.classroomevnmngapp.ui.setting.classroom.ClassRoomListFragment"
        android:id="@+id/navigation_user_classroom">
        <action
            android:id="@+id/action_classroom_listFragment_to_add_classroomFragment"
            app:destination="@id/navigation_admin_add_classroom"
            app:enterAnim="@anim/animate_slide_up_enter"
            app:exitAnim="@anim/animate_slide_up_exit"
            app:launchSingleTop="true"
            app:popUpTo="@+id/fragment_user_setting"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment  tools:layout="@layout/fragment_add_classroom"
        android:name="com.is.classroomevnmngapp.ui.setting.classroom.ClassroomAddFragment"
        android:id="@+id/navigation_admin_add_classroom"/>



</navigation>